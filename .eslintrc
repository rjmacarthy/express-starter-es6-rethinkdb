{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      }
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0]
  }
}